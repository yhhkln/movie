<div class="col-md-l2">

  <h2 class="text-center">我收藏的电影</h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> 名称 </th>
        <th> 描述 </th>
        <th> 创立者 </th>
        <th> 影评数量 </th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group|%>
        <tr>
          <td> # </td>
          <td> <%= link_to(group.title, group_path(group))%> </td>
          <td><%= render_group_description(group) %></td>
          <td> <%= group.user.email %> </td>
          <td> <%= group.posts.count %> </td>
          <td> <%= group.updated_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
